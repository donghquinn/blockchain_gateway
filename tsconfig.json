{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types/**/*",
    ],
    "lib": ["ESNext"],
    "allowJs": false,
    "strict": true, 
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@libraries/*": ["libraries/*"],
      "@utilities/*": ["utilities/*"],
      "@queries/*":  ["queries/*"],
      "@routers/*":  ["routers/*"],
      "@assets/*":  ["assets/*"],
      "@validators/*": ["validators/*"],
      "@controllers/*": ["controllers/*"],
      "@dto/*": ["dto/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  },
}
